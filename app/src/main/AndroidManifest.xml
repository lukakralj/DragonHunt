<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lukak.dragonhunt">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.dragonhunt.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="com.dragonhunt.Create_hunt"
            android:label="@string/title_activity_create_hunt">
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dragonhunt.join_group"
            android:label="@string/title_activity_join_group" />
        <activity
            android:name="com.dragonhunt.UserProfile"/>
        <activity
            android:name="com.dragonhunt.SearchGroups"
            android:label="search_my_group_pal" />
        <activity
            android:name="com.dragonhunt.SignUpPage"
            android:label="@string/title_activity_sign_up_page">
        </activity>
        <activity
            android:name="com.dragonhunt.LoginPage"
            android:label="@string/title_activity_login_page">
        </activity>

    </application>

</manifest>